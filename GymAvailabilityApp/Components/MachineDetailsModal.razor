<ModalHeader>
    <ModalTitle>@Machine.Name</ModalTitle>
    <CloseButton />
</ModalHeader>
<ModalBody MaxHeight="70">
    <Card>
        @if (Machine != null && Machine.ImageFileLink != null)
        {
            <CardImage Source="@Machine.ImageFileLink" Alt="Placeholder image" />

        }
        <CardBody>
            <CardText>
               @Machine.Description
            </CardText>
        </CardBody>
    </Card>
</ModalBody>
<ModalFooter>
    <Button Color="Color.Danger" Clicked="Close">Zamknij</Button>
</ModalFooter>
@code {
    [Inject] public IModalService ModalService { get; set; }

    [Parameter] public MachineModel Machine { get; set; }

    private async Task Close()
    {
        await ModalService.Hide();
    }
}